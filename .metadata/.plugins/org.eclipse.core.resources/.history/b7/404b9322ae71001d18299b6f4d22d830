package hw4;

public class Blinky {

	public void calculateNextCell(Descriptor d)
	{
	  Location currentLoc = getCurrentLocation();

	  if (currentLoc.row() > 2)
	  {
		nextLoc = new Location(currentLoc.row() - 1, currentLoc.col());
		nextDir = UP;
	  }
	  else
	  {
		nextLoc = new Location(currentLoc.row(), currentLoc.col() + 1);
		nextDir = RIGHT;
	  }
	} 
}
